<Viewbox
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:MiniPuzzle"
        x:Class="MiniPuzzle.Switcher"
        mc:Ignorable="d" MouseDown="this_MouseDown" Cursor="Hand" x:Name="Border">

    <Border x:Name="BorderSwitcher" Background="#FFEEEEEE" Padding="2" Width="50" Height="25">
        <Ellipse x:Name="EllipseSwitcher" VerticalAlignment="Center" HorizontalAlignment="Left" Width="21" Height="21" Margin="0,0,0,0">
            <Ellipse.Fill>
                <SolidColorBrush Color="White"/>
            </Ellipse.Fill>
        </Ellipse>
    </Border>
</Viewbox>
